{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "trailingSlash": false,
    "site": "eccheuma",
    "public": "app",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.*",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "max-age=2592000"
          }
        ]
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "predeploy": "npm --prefix \"$RESOURCE_DIR\" run build"
  },
  "remoteconfig": {
    "template": "remoteconfig.template.json"
  }
}
