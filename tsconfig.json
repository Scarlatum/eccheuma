{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ESNext",
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "jsx": "preserve",    
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["./source/*"],
      "path::root/*": ["./*"],
    },
    "types": [
      "vue/types",
      "@types/node",
      "@nuxt/types",
      "@types/w3c-css-typed-object-model-level-1",
    ],
  },
  "vueCompilerOptions": {
    "target": 2.7,
    "experimentalImplicitWrapComponentOptionsWithVue2Extend": true,
    "jsxTemplates": true,
    "experimentalRuntimeMode": "runtime-dom",
  },
  "exclude": [
    ".nuxt",
    ".firebase",
    "funtions",
    "node_modules",
    "packages",
    "app",
  ]
}
