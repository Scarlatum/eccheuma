{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES2020",
    "moduleResolution": "Node",
    "lib": [
      "DOM",
      "ES6",
      "ESNext",
      "ESNext.AsyncIterable",
      "WebWorker",
      "WebWorker.ImportScripts",
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "~/*": ["source/*"],
      "path::root/*": ["./*"],
    },
    "types": [
      "vue/types",
      "@types/node",
      "@nuxt/types",
      "@types/w3c-css-typed-object-model-level-1",
    ]
  },
  "exclude": [
    ".nuxt",
    ".firebase",
    "funtions",
    "node_modules",
    "app",
  ]
}
